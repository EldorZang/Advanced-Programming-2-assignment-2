@model advanced_programming_2_backend.Models.Rating

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Rating #@Model.Id</h1>
<h3>Are you sure you want to delete this rating?</h3>
<div style="text-align:center; padding: 0.5rem 0; width:100%; color:rgb(55, 55, 55)">
    <div>
        @for (int i = 0; i < Model.Score; i++)
        {
            <img src="~/Images/starGold.png" align="middle" />
        }
        @for (int i = Model.Score; i < 5; i++)
        {
            <img src="~/Images/starHollow.png" align="middle" />
        }
    </div>
    <h3>Title:</h3>
    <h3 style="text-align:center">@Model.Title</h3>
    <h5 style="text-align:left">Description:</h5>
    <h5>@Model.Description</h5>
    <h4 style="color:antiquewhite">Last edit on @Model.Date</h4>
    <form asp-action="Delete">
        <h4 style="color: aquamarine"> Are you sure you want to delete this rating?</h4>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <p></p>|
        <a asp-action="Index">Back to List</a> |
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit Rating</a>
    </form>
</div>